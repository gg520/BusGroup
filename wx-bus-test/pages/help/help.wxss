  /* 模态框  */
.modal-mask {/*画布*/
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 100%;
  position: fixed;
  top: 20%; 
  bottom: 0;
  z-index: 9999;
  background: #fff;
  margin: -180rpx 105rpx;
   margin:0px 0px 0px;
}

/* 关闭按钮 */

.modal-title .close {
  position: absolute;
  top: 25rpx; 
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
}
.modal-title .close image {
  display: block;
  width: 40rpx;
  height: 40rpx;
}


.modal-title {
  padding-top: 25rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: left;
  font-weight: bold;
  border-bottom: 1px solid #dedede;
}

.modal-content {
  padding: 50rpx 32rpx;
}



